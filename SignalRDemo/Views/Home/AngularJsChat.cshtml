
@{
    ViewBag.Title = "AngularJsChat";
}

<h2>AngularJs Chat</h2>
<div class="container" ng-app="app" ng-controller="ctrl">
    <form>
        <input type="text" placeholder="name" ng-model="user.name" />
        <input type="text" placeholder="message" ng-model="user.message" />
        <button class="btn btn-info" ng-click="send()">send</button>

        <ul>
            <li ng-repeat="item in messages">
                <b ng-bind="item.name"></b> <small ng-bind="item.time"></small> : {{item.message}}
            </li>
        </ul>
    </form>
</div>

@section scripts{
    
<script src="~/app/lib/angular.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
<script src="~/signalr/hubs"></script>
<script src="~/app/app.js"></script>
<script src="~/app/factories/signalR-foctory.js"></script>
<script src="~/app/controllers/appController.js"></script>
    }
